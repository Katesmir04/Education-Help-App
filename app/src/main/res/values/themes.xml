<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EducationHelp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_purple</item>
        <item name="colorPrimaryVariant">#52179F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EducationHelpNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_purple</item>
        <item name="colorPrimaryVariant">#8F53CA</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_colors_state</item>
        <item name="endIconTint">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Theme.AnswerInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="boxStrokeColor">@color/anwer_input_colors_state</item>
        <item name="helperTextTextColor">@color/main_purple</item>
        <item name="hintTextColor">@color/main_purple</item>
    </style>

    <style name="Theme.Expandable" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_colors_state</item>
        <item name="endIconTint">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

</resources>